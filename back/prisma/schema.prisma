// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  date     DateTime @default(now())
  name     String
  email    String    @unique
  password String
  telefone String
  contacts Contact[]

  @@map("users")
}

model Contact {
  id       String @id
  date     DateTime @default(now())
  name     String
  email    String
  telefone String
  user     User   @relation(fields: [userId], references: [id])
  userId   String

  @@map("contacts")
}
